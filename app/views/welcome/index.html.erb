<div class="text-center header">
  <h1>Sarah & Andy</h1>
  <%= image_tag 'decoration.jpg', width: '100px' %>
  <h1>September 2, 2017</h1>
  <div class="photos-carousel">
      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner text-center" role="listbox">
          <div class="carousel-item active">
            <%= image_tag('engagement1.jpg', class: "d-block img-fluid") %>
          </div>
          <div class="carousel-item">
            <%= image_tag('engagement2.jpg', class: "d-block img-fluid") %>
          </div>
          <div class="carousel-item">
            <%= image_tag('engagement3.jpg', class: "d-block img-fluid") %>
          </div>
          <div class="carousel-item">
            <%= image_tag('engagement4.jpg', class: "d-block img-fluid") %>
          </div>
          <div class="carousel-item">
            <%= image_tag('engagement5.jpg', class: "d-block img-fluid") %>
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
  </div>
</div>

